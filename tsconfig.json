{
  "compileOnSave": false,
  "compilerOptions": {

    "baseUrl":"./",
    "paths":{
      "@environments/*": ["./src/environments/*"],
      "@assets/*": ["./src/assets/*"],
      "@mocks/*": ["./src/assets/data/mocks/*"],
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ]
  }
}
